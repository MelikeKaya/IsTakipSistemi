<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login"
    android:background="#ffffff"
    >


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/ImgLogo"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kullanıcı Adı"
        android:id="@+id/TxtKullaniciAd"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ImgLogo"
        android:background="@drawable/edittextbackground"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingLeft="14dp"
        android:textSize="14dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Şifre"
        android:id="@+id/TxtSifre"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/TxtKullaniciAd"
        android:background="@drawable/edittextbackground"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingLeft="14dp"
        android:layout_marginTop="4dp"
        android:textSize="14dp"
        android:inputType="textPassword"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TxtSifre"
        android:id="@+id/ChkHatirla"
        android:layout_marginTop="4dp"
        android:text="Beni Hatırla"
        android:textSize="13dp"
        android:textColor="#054658"
        android:paddingLeft="0dp"
        android:layout_alignParentLeft="true"
    />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BtnLogin"
        android:text="Giriş Yap"
        android:layout_below="@+id/ChkHatirla"
        android:layout_marginTop="10dp"
        android:background="#0DADD8"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BtnLogin"
        android:id="@+id/ProgressLogin"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TxtBottom"
        android:layout_centerHorizontal="true"
        android:textSize="12dp"
        android:textColor="#054658"
        android:text="İş Takip Sistemi | 2018 --- Personel Ziyaret Kayıt Yazılımı"
        android:layout_alignParentBottom="true"
        />




</RelativeLayout>
